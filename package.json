{
  "name": "power-automate-connector",
  "version": "1.0.0",
  "description": "M365 Copilot Plugin: Power Automate Connector",
  "main": "dist/index.js",
  "scripts": {
    "build": "echo 'Building power-automate-connector' && mkdir -p dist && cp -r src/* dist/",
    "test": "jest",
    "validate-schemas": "node scripts/validate-schemas.js",
    "deploy": "pwsh -File ./scripts/deploy-connector.ps1",
    "deploy:dev": "pwsh -File ./scripts/deploy-connector.ps1 -Environment dev",
    "deploy:prod": "pwsh -File ./scripts/deploy-connector.ps1 -Environment prod"
  },
  "keywords": [
    "m365",
    "copilot",
    "plugin",
    "connector",
    "power-automate"
  ],
  "author": "BoopasBagelDeli",
  "license": "MIT",
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "ajv": "^8.12.0",
    "jest": "^29.5.0"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
